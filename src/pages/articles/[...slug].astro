---
import { getEntry } from "astro:content";
import MainLayout from "../../layouts/MainLayout.astro";
import { formatDate } from "../../utils";

const { slug } = Astro.params;

if (!slug) {
    throw new Error("Missing slug");
}

const post = await getEntry("blog", slug);

if (!post) {
    return Astro.redirect("/404");
}

const { Content } = await post.render();

---

<MainLayout>
    <a href="articles.html" class="inline-block bg-gray-100 p-2 mb-6 hover:bg-indigo-500 hover:text-white">Back To Articles</a>
      <article>
        <h1 class="text-4xl font-bold mb-2"> {post.data.title}</h1>
        <h3 class="text-lg mb-2">Written by {post.data.author} on {formatDate(post.data.pubDate)}</h3>
        <div class="flex flex-wrap gap-2 mb-6">
          {post.data.tags.map((tag: string, index: number) => (
            <span
          class={index % 2 === 0 ? "px-2 py-1 bg-blue-500 text-white rounded-full text-xs hover:opacity-90" : "px-2 py-1 bg-purple-500 text-white rounded-full text-xs hover:opacity-90"}
          ><a href={"/articles/tag/" + tag}>{tag}</a></span>
          ))}
        </div>
        <img src={'/images/' + post.data.image} alt="Article Image" class="w-full h-auto rounded-xl mb-6" />
        <Content />
      </article>
</MainLayout>

<style is:global>
  img {
    max-width: 100%;
    height: auto;
  }

  p {
      margin: 20px 0;
  }

  h2 {
      margin: 40px 0 20px;
      font-size: 1.8rem;
  }
</style>